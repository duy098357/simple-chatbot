<!-- StratoBridge Assistant Chat Widget -->
<div id="strato-widget-container"></div>
<script>
(async function() {
  const container = document.getElementById("strato-widget-container");
  container.innerHTML = `
  <style>
  #strato-chat {
    position: fixed;
    bottom: 20px;
    right: 20px;
    width: 320px;
    height: 420px;
    background: #fff;
    border: 1px solid #ccc;
    border-radius: 12px;
    box-shadow: 0 0 10px rgba(0,0,0,0.2);
    display: flex;
    flex-direction: column;
    font-family: Arial, sans-serif;
    z-index: 9999;
  }
  #strato-header {
    background: #0066cc;
    color: #fff;
    padding: 12px;
    border-radius: 12px 12px 0 0;
    font-weight: bold;
  }
  #strato-messages {
    flex: 1;
    overflow-y: auto;
    padding: 10px;
  }
  #strato-input {
    display: flex;
    border-top: 1px solid #ddd;
  }
  #strato-input input {
    flex: 1;
    border: none;
    padding: 10px;
    outline: none;
  }
  #strato-input button {
    background: #0066cc;
    color: white;
    border: none;
    padding: 10px 15px;
    cursor: pointer;
  }
  </style>
  <div id="strato-chat">
    <div id="strato-header">StratoBridge Assistant</div>
    <div id="strato-messages">
      <div>ðŸ‘‹ Hello! How can I assist with your mortgage questions?</div>
    </div>
    <div id="strato-input">
      <input id="msg" type="text" placeholder="Type here..." />
      <button id="send">Send</button>
    </div>
  </div>
  `;

  const api = "https:simple-chatbot.onrender.com/chat"; // replace with your ngrok or deployed URL
  const messages = document.getElementById("strato-messages");
  const input = document.getElementById("msg");
  const sendBtn = document.getElementById("send");

  function addMessage(sender, text) {
    const msg = document.createElement("div");
    msg.textContent = (sender === "user" ? "ðŸ§‘ " : "ðŸ¤– ") + text;
    messages.appendChild(msg);
    messages.scrollTop = messages.scrollHeight;
  }

  async function sendMessage() {
    const text = input.value.trim();
    if (!text) return;
    addMessage("user", text);
    input.value = "";
    try {
      const res = await fetch(api, {
        method: "POST",
        headers: {"Content-Type": "application/json"},
        body: JSON.stringify({message: text})
      });
      const data = await res.json();
      addMessage("bot", data.reply || "Sorry, I didnâ€™t understand that.");
    } catch (err) {
      addMessage("bot", "âš ï¸ Could not reach chatbot server.");
      console.error(err);
    }
  }

  sendBtn.addEventListener("click", sendMessage);
  input.addEventListener("keypress", (e) => { if (e.key === "Enter") sendMessage(); });
})();
</script>
